#ifndef _IAS_DS_DB2_Session_H_
#define _IAS_DS_DB2_Session_H_

#include <ds/api/Session.h>

#include <qs/fmt/FmtFactory.h>

#include <sqlcli1.h>

namespace IAS {
namespace DS {
namespace Impl {
namespace DB2 {

class Connection;

/*************************************************************************/
/** The Session class.
 *
 */
class Session : public virtual API::Session {
public:

	virtual ~Session() throw();


	virtual API::StatementInsert*   createInsert();
	virtual API::StatementCall*     createCall();
	virtual API::StatementSelect*   createSelect();
	virtual API::StatementDelete*   createDelete();
	virtual API::StatementUpdate*   createUpdate();

	Connection* getConnection()const;

	inline SQLHANDLE getDBHandle(){ return hdbc; }

	inline QS::Fmt::Formatter* getFormatter()const{ return pFormatter; }

protected:
	Session(Connection* pConnection, SQLSMALLINT iAutoCommit);

	SQLHANDLE hdbc;

	QS::Fmt::Formatter* pFormatter;

	Connection* pConnection;

	friend class Factory<Session>;
};

/*************************************************************************/
}
}
}
}

#endif /* _IAS_DS_DB2_Session_H_ */
